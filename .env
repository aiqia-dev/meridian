# Meridian Configuration

# Host to bind (default: empty = all interfaces)
MERIDIAN_HOST=

# Port to expose (default: 9851)
MERIDIAN_PORT=9851

# Data directory (default: data)
MERIDIAN_DIR=data

# Protected mode - disable for external connections (default: no)
# Set to "yes" to only allow localhost connections
MERIDIAN_PROTECTED_MODE=no

# Append-only file persistence (default: yes)
MERIDIAN_APPENDONLY=yes

# Maximum memory limit (e.g., 1gb, 512mb, 256mb)
# Leave empty for unlimited
MERIDIAN_MAXMEMORY=

# Authentication password (leave empty for no authentication)
MERIDIAN_REQUIREPASS=

# Prometheus metrics address (e.g., :9090)
MERIDIAN_METRICS_ADDR=

# ============================================
# Admin Panel Configuration
# ============================================

# Admin panel username (required to enable admin panel)
MERIDIAN_ADMIN_USER=admin

# Admin panel password (required to enable admin panel)
MERIDIAN_ADMIN_PASSWORD=admin

# JWT secret for admin sessions (auto-generated if empty)
MERIDIAN_ADMIN_JWT_SECRET=

# ============================================
# Logging
# ============================================

# Log encoding: text or json (default: text)
MERIDIAN_LOG_ENCODING=text

# Verbose logging (default: false)
MERIDIAN_VERBOSE=false
